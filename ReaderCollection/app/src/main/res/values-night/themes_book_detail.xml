<resources>

    <style name="Theme.ReaderCollection.NoActionBar.BookDetail" parent="Theme.AppCompat.NoActionBar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_dark</item>
    </style>

    <style name="FloatingButton.AddPhoto">
        <item name="android:src">@drawable/ic_add_camera_photo_dark</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="FloatingButton.Favourite">
        <item name="android:src">@drawable/ic_favourite_empty_dark</item>
    </style>

    <style name="RatingCountImageView">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:src">@drawable/ic_person_dark</item>
    </style>

