<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <item>

        <shape
            android:shape="rectangle"
            >

            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                />

            <solid
                android:color="@color/colorPrimary"
                />

        </shape>

    </item>

    <item
        android:top="1dp"
        >

        <shape
            android:shape="rectangle"
            >

            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                />

            <solid
                android:color="@color/colorSecondary"
                />

        </shape>

    </item>

</layer-list>