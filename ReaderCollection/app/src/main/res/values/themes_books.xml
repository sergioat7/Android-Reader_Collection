<resources>

    <style name="CustomSpinner.Rounded">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SpinnerRoundedItem">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:minHeight">30dp</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="mrb_fillBackgroundStars">false</item>
        <item name="android:progressTint">@color/colorTertiary</item>
        <item name="android:progressBackgroundTint">@color/colorTertiaryLight</item>
        <item name="android:secondaryProgressTint">@color/colorTertiaryLight</item>
    </style>

    <style name="CustomRatingBar.Indicator" parent="CustomRatingBar">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="RatingTextView">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="NoRatingTextView">
        <item name="android:text">@string/new_book</item>
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="RoundedTextView">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_text_view</item>
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SeparatorLineView">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="PositionListButton">
        <item name="android:backgroundTint">@color/buttonPrimary</item>
        <item name="android:tint">@color/colorSecondary</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="borderWidth">0dp</item>
        <item name="maxImageSize">10dp</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="StartListButton" parent="PositionListButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="StartListButton.Image">
        <item name="android:src">@drawable/ic_double_arrow_up_light</item>
    </style>

    <style name="EndListButton" parent="PositionListButton">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="EndListButton.Image">
        <item name="android:src">@drawable/ic_double_arrow_down_light</item>
    </style>

    <style name="LoadMoreButton" parent="RoundedButton.Action">
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="LoadMoreButton.Image">
        <item name="android:drawableStart">@drawable/ic_add_circle_outline_light</item>
    </style>

</resources>