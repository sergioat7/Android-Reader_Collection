<resources>

    <!--  Themes  -->

    <style name="Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/buttonPrimary</item>
        <item name="colorSwitchThumbNormal">@color/buttonSecondary</item>
    </style>

    <style name="Theme.ReaderCollection" parent="Theme">
        <item name="titleTextColor">@color/textTertiary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_light</item>
    </style>

    <style name="Theme.ReaderCollection.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorSecondary</item>
    </style>

    <style name="Theme.ReaderCollection.DialogTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--  TextViews  -->

    <style name="Widget.ReaderCollection.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.Main">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.Section">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.Book">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.ReadingBook">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.GoogleBook">
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Subtitle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Subtitle.Main">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Subtitle.Book">
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Subtitle.ReadingBook">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Subtitle.GoogleBook">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--  Others  -->

    <style name="BottomMenu">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemTextColor">@color/textTertiary</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="menu">@menu/bottom_nav_menu</item>
    </style>

    <style name="RoundedButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RoundedButton.Action">
        <item name="android:background">@drawable/rounded_button_primary</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textPrimaryLight</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="PopupErrorTextView">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="PopupErrorButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:text">@string/accept</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textTertiary</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:minHeight">30dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SpinnerTextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoadingProgressBar">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="Widget.ReaderCollection.ImageButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="rippleColor">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">@null</item>
        <item name="android:minHeight">@null</item>
    </style>

</resources>