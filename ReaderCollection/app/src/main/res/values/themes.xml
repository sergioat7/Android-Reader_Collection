<resources>

    <style name="Theme.ReaderCollection.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/textTertiaryLight</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorSecondary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorSwitchThumbNormal">@color/colorSecondary</item>
        <item name="bottomNavigationStyle">@style/Widget.ReaderCollection.BottomNavigationView</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.ReaderCollection.MaterialAlertDialog</item>
        <item name="android:colorBackground">@color/colorSecondary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.ReaderCollection.DialogTransparent" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.ReaderCollection.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorSecondary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.ReaderCollection</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.ReaderCollection.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.ReaderCollection.Body</item>
    </style>

</resources>