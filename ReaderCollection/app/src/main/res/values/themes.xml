<resources>

    <style name="Theme.ReaderCollection" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorSecondary</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.ReaderCollection.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorSecondary</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="RoundedButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RoundedButton.Action">
        <item name="android:background">@drawable/rounded_button_primary</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="PopupErrorTextView">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="PopupErrorButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:text">@string/accept</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

</resources>