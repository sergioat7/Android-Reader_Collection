<resources>

    <!--  Themes  -->

    <style name="Theme.ReaderCollection" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/buttonPrimary</item>
        <item name="colorSwitchThumbNormal">@color/buttonSecondary</item>
    </style>

    <style name="Theme.ReaderCollection.ActionBar">
        <item name="titleTextColor">@color/textTertiary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_light</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.ReaderCollection.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/buttonPrimary</item>
        <item name="colorSwitchThumbNormal">@color/buttonSecondary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.ReaderCollection.NoActionBar.BookDetail">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_light</item>
    </style>

    <style name="Theme.ReaderCollection.DialogTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>