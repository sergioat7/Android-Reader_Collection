<resources>

    <style name="SynchronizeTitleTextView">
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:text">@string/sync_title</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LineView">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="LineView.Up">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="LineView.Down">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="SynchronizeProgressBar">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

</resources>