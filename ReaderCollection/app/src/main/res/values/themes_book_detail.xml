<resources>

    <style name="Theme.ReaderCollection.NoActionBar.BookDetail" parent="Theme.AppCompat.NoActionBar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_light</item>
    </style>

    <style name="FavouriteFloatingButton">
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_favourite_empty_light</item>
    </style>

    <style name="RatingCountImageView">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:src">@drawable/ic_person_light</item>
    </style>

    <style name="RatingCountTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="BookTitleTextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="BookAuthorsTextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BookDataTitleTextView">
        <item name="android:textColor">@color/textPrimaryLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BookDataTitleTextView.Left">
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="BookDataTitleTextView.Right">
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="BookDataTextView">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BookDataTextView.Left">
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="BookDataTextView.Right">
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="BookDescriptionTextView" parent="BookDataTextView">
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:maxLines">7</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BookSummaryEditText" parent="CustomEditText.BookDetails">
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:maxLines">7</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BookReadMoreButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">top</item>
        <item name="android:text">@string/read_more</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CustomEditText.BookDetails" parent="CustomEditText">
        <item name="android:textColorHint">@color/textSecondaryLight</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="CustomEditText.BookDetails.Date" parent="CustomEditText.BookDetails">
        <item name="android:inputType">date</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CustomSpinner.Left">
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="CustomSpinner.Right">
        <item name="android:layout_marginStart">5dp</item>
    </style>

</resources>