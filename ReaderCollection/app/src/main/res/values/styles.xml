<resources>

    <!--  TextViews  -->

    <style name="Widget.ReaderCollection.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.Main">
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.Section">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.Book">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.ReadingBook">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.GoogleBook">
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.RatingCount">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Subtitle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Subtitle.Main">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Subtitle.Book">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Subtitle.ReadingBook">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Subtitle.GoogleBook">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Spinner">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <!--  TextButton  -->

    <style name="Widget.ReaderCollection.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@null</item>
        <item name="iconPadding">8dp</item>
        <item name="android:padding">@dimen/no_padding</item>
        <item name="android:insetTop">@dimen/no_padding</item>
        <item name="android:insetBottom">@dimen/no_padding</item>
        <item name="android:minHeight">@dimen/no_size</item>
        <item name="android:minWidth">@dimen/no_size</item>
    </style>

    <style name="Widget.ReaderCollection.TextButton.Link">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--  Button  -->

    <style name="Widget.ReaderCollection.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@null</item>
        <item name="iconPadding">@dimen/padding_8dp</item>
        <item name="android:insetTop">@dimen/no_padding</item>
        <item name="android:insetBottom">@dimen/no_padding</item>
    </style>

    <style name="Widget.ReaderCollection.Button.Main">
        <item name="backgroundTint">@drawable/rounded_button_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.ReaderCollection.Rounded.15</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.ReaderCollection.Button.Main.Icon">
        <item name="android:paddingStart">@dimen/padding_12dp</item>
        <item name="android:paddingEnd">@dimen/padding_12dp</item>
    </style>

    <!--  ImageButton  -->

    <style name="Widget.ReaderCollection.ImageButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="rippleColor">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">@null</item>
        <item name="android:minHeight">@null</item>
    </style>

    <style name="Widget.ReaderCollection.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="tint">@color/colorSecondary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!--  BottomNavigationView  -->

    <style name="Widget.ReaderCollection.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/textTertiary</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="menu">@menu/bottom_nav_menu</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--  ShapeAppearance  -->

    <style name="ShapeAppearance.ReaderCollection.Rounded" parent="ShapeAppearance.MaterialComponents" />

    <style name="ShapeAppearance.ReaderCollection.Rounded.15">
        <item name="cornerSize">@dimen/radius_15dp</item>
    </style>

    <!--  Others  -->

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textPrimaryLight</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:minHeight">@dimen/size_30dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BookTitleEditText" parent="CustomEditText">
        <item name="android:layout_marginTop">@dimen/margin_12dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="BookAuthorsEditText" parent="CustomEditText">
        <item name="android:layout_marginTop">@dimen/margin_5dp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BookDataTitleTextView">
        <item name="android:textColor">@color/textPrimaryLight</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BookDataTitleTextView.Left">
        <item name="android:layout_marginEnd">@dimen/margin_5dp</item>
    </style>

    <style name="BookDataTitleTextView.Right">
        <item name="android:layout_marginStart">@dimen/margin_5dp</item>
    </style>

    <style name="BookReadMoreButton">
        <item name="android:minHeight">@dimen/no_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">top</item>
        <item name="android:text">@string/read_more</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="BookTextCountTextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CustomEditText.BookDetails" parent="CustomEditText">
        <item name="android:textColorHint">@color/textSecondaryLight</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BookDetailEditText" parent="CustomEditText.BookDetails">
        <item name="android:lineSpacingExtra">@dimen/margin_5dp</item>
        <item name="android:maxLines">7</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CustomEditText.BookDetails.Left">
        <item name="android:layout_marginEnd">@dimen/margin_5dp</item>
    </style>

    <style name="CustomEditText.BookDetails.Right">
        <item name="android:layout_marginStart">@dimen/margin_5dp</item>
    </style>

    <style name="CustomEditText.BookDetails.Date" parent="CustomEditText.BookDetails">
        <item name="android:inputType">date</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CustomSpinner.Left">
        <item name="android:layout_marginEnd">@dimen/margin_5dp</item>
    </style>

    <style name="CustomSpinner.Right">
        <item name="android:layout_marginStart">@dimen/margin_5dp</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="mrb_fillBackgroundStars">false</item>
        <item name="android:progressTint">@color/colorTertiary</item>
        <item name="android:progressBackgroundTint">@color/colorTertiaryLight</item>
        <item name="android:secondaryProgressTint">@color/colorTertiaryLight</item>
    </style>

    <style name="CustomRatingBar.Indicator" parent="CustomRatingBar">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="RatingTextView">
        <item name="android:layout_marginStart">@dimen/margin_12dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_3dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="NoRatingTextView">
        <item name="android:text">@string/new_book</item>
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="RoundedTextView">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_text_view</item>
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="SeparatorLineView">
        <item name="android:layout_marginStart">@dimen/margin_24dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_24dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="PositionListButton">
        <item name="android:backgroundTint">@color/buttonPrimary</item>
        <item name="android:tint">@color/colorSecondary</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="borderWidth">@dimen/no_size</item>
        <item name="maxImageSize">@dimen/size_10dp</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="StartListButton" parent="PositionListButton">
        <item name="android:layout_marginTop">@dimen/margin_12dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_12dp</item>
    </style>

    <style name="StartListButton.Image">
        <item name="android:src">@drawable/ic_double_arrow_up</item>
    </style>

    <style name="EndListButton" parent="PositionListButton">
        <item name="android:layout_marginBottom">@dimen/margin_12dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_12dp</item>
    </style>

    <style name="EndListButton.Image">
        <item name="android:src">@drawable/ic_double_arrow_down</item>
    </style>

    <style name="LoginImage">
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_20dp</item>
        <item name="android:src">@drawable/login_register_image</item>
        <item name="android:contentDescription">@string/password</item>
    </style>

    <style name="CredentialsEditText" parent="CustomEditText">
        <item name="android:ems">10</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="UsernameEditText" parent="CredentialsEditText">
        <item name="android:layout_marginStart">@dimen/margin_24dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_24dp</item>
        <item name="android:hint">@string/username</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="PasswordEditText" parent="CredentialsEditText">
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditTextButton">
        <item name="android:layout_width">@dimen/size_48dp</item>
        <item name="android:layout_marginTop">@dimen/margin_12dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_12dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="UsernameInfoButton" parent="EditTextButton">
        <item name="android:src">@drawable/ic_show_info</item>
    </style>

    <style name="PasswordEyeButton" parent="EditTextButton">
        <item name="android:src">@drawable/ic_show_password</item>
    </style>

    <style name="NoAccountText">
        <item name="android:layout_marginEnd">@dimen/margin_5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:text">@string/not_account</item>
        <item name="android:textColor">@color/textPrimaryLight</item>
    </style>

    <style name="NoAccountButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:text">@string/create_account</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="SynchronizeTitleTextView">
        <item name="android:layout_marginStart">@dimen/margin_100dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_100dp</item>
        <item name="android:text">@string/sync_title</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="LineView">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="LineView.Up">
        <item name="android:layout_marginBottom">@dimen/margin_12dp</item>
    </style>

    <style name="LineView.Down">
        <item name="android:layout_marginTop">@dimen/margin_12dp</item>
    </style>

    <style name="SynchronizeProgressBar">
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_20dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="RadioButtonLanguage">
        <item name="android:layout_weight">1</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TitleConfigTextView">
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_5dp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

</resources>