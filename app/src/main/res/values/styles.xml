<resources>

    <style name="Widget" />

    <style name="Widget.ReaderCollection" />

    <!--  TextViews  -->

    <style name="Widget.ReaderCollection.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title">
        <item name="android:fontFamily">@font/roboto_serif_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.Section">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Title.TextCount">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="Widget.ReaderCollection.TextView.Header">
        <item name="android:fontFamily">@font/roboto_serif_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <!--  TextInputLayout  -->

    <style name="Widget.ReaderCollection.TextInputLayout.Bordered" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_text_input_layout_border</item>
        <item name="editTextStyle">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="hintTextAppearance">@style/TextAppearance.ReaderCollection.Hint</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.ReaderCollection.Rounded.10
        </item>
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="android:useDefaultMargins">false</item>
    </style>

    <style name="Widget.ReaderCollection.TextInputLayout.BorderedDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/color_text_input_layout_border</item>
        <item name="editTextStyle">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="hintTextAppearance">@style/TextAppearance.ReaderCollection.Hint</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.ReaderCollection.Rounded.10
        </item>
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="android:useDefaultMargins">false</item>
    </style>

    <!--  TextButton  -->

    <style name="Widget.ReaderCollection.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@null</item>
        <item name="iconPadding">8dp</item>
        <item name="android:padding">@dimen/no_padding</item>
        <item name="android:insetTop">@dimen/no_padding</item>
        <item name="android:insetBottom">@dimen/no_padding</item>
        <item name="android:minHeight">@dimen/no_size</item>
        <item name="android:minWidth">@dimen/no_size</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.ReaderCollection.TextButton.Main">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.ReaderCollection.TextButton.Main.Action">
        <item name="android:fontFamily">@font/roboto_serif_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <!--  FloatingActionButton  -->

    <style name="Widget.ReaderCollection.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="tint">@color/colorSecondary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!--  Chip  -->

    <style name="Widget.ReaderCollection.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="rippleColor">@null</item>
        <item name="android:checkable">false</item>
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textAppearance">@style/TextAppearance.ReaderCollection.Chip</item>
    </style>

    <!--  RatingBar  -->

    <style name="Widget.ReaderCollection.RatingBar" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="mrb_fillBackgroundStars">false</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:progressTint">@color/colorTertiary</item>
        <item name="android:progressBackgroundTint">@color/colorTertiaryLight</item>
        <item name="android:secondaryProgressTint">@color/colorTertiaryLight</item>
    </style>

    <!--  ShapeAppearance  -->

    <style name="ShapeAppearance.ReaderCollection.Rounded" parent="ShapeAppearance.MaterialComponents" />

    <style name="ShapeAppearance.ReaderCollection.Rounded.10">
        <item name="cornerSize">@dimen/radius_10dp</item>
    </style>

    <style name="TextAppearance.ReaderCollection.Hint" parent="TextAppearance.Design.Hint">
        <item name="fontFamily">@font/roboto_serif_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="TextAppearance.ReaderCollection.Chip" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_serif_regular</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <!--  MaterialAlertDialog  -->

    <style name="MaterialAlertDialog.ReaderCollection" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.ReaderCollection.Rounded.10</item>
    </style>

    <style name="MaterialAlertDialog.ReaderCollection.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:fontFamily">@font/roboto_serif_bold</item>
        <item name="android:maxLines">@null</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="MaterialAlertDialog.ReaderCollection.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/roboto_serif_regular</item>
        <item name="android:maxLines">@null</item>
        <item name="android:singleLine">false</item>
    </style>

</resources>